{% set suggestionText = block.suggestion.suggestion %}
{% if block.suggestion.highlighted is not null and block.suggestion.highlighted is not empty %}
    {% set suggestionText = block.suggestion.highlighted %}
{% endif %}

<li class="search-suggest-product js-result">
    <a href="{{ seoUrl('frontend.search.page', {'search': block.suggestion.suggestion}) }}"
       title="{{ block.suggestion.suggestion }}"
       class="search-suggestion-link">
        <p>{{ suggestionText }}</p>
    </a>
    {% for bxblock in block.blocks %}
        {% set narrativeContent = {'block' : bxblock } %}
        {% sw_include bxblock.template with narrativeContent %}
    {% endfor %}
</li>
